{
    "source": {
        "include": ["../lib", "../package.json", "../README.md"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },

    "plugins": ["plugins/markdown"],

    "opts": {
        "encoding": "utf8",
        "readme": "../README.md",
        "destination": "/",
        "recurse": true,
        "verbose": true,
        "template": "./node_modules/clean-jsdoc-theme",
        "theme_opts": {
            "theme": "dark",
            "title": "Mongochrome",
            "menu": [{
                "title": "Github",
                "link": "https://github.com/raflymln/mongochrome/",
                "target": "_blank"
            }]
        }
    }
}